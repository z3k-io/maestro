{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "mix-monkey",
    "version": "0.2.19"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "show": true,
        "hide": true,
        "setPosition": true,
        "setSize": true,
        "setFocus": true,
        "center": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Volume Overlay",
        "url": "index-overlay.html",
        "label": "overlay",
        "visible": false,
        "focus": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "center": true,
        "skipTaskbar": true,
        "width": 300,
        "height": 60,
        "x": 0,
        "y": 30
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "nsis",
      "identifier": "com.ccc.mixmonkey",
      "resources": [
        "config.yaml",
        "../arduino/sketch/sketch.ino"
      ],
      "icon": [
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/icon.png"
      ]
    }
  }
}